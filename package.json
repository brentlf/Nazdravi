{
  "name": "nazdravi",
  "description": "Nazdravi - Comprehensive nutrition consulting services platform",
  "keywords": [
    "nutrition",
    "consulting",
    "health",
    "wellness",
    "firebase"
  ],
  "author": "Nazdravi Team",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:client",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:functions",
    "build:client": "cd client && npm run build",
    "build:functions": "cd functions && npm run build",
    "start": "cd client && npm run preview",
    "check": "cd client && npm run check",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build:client && firebase deploy --only hosting",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "emulators": "firebase emulators:start",
    "emulators:hosting": "firebase emulators:start --only hosting",
    "emulators:functions": "firebase emulators:start --only functions"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "firebase": "^12.2.1"
  }
}
